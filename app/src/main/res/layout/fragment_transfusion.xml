<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.transfusion.TransfusionFragment">

    <TextView
        android:padding="@dimen/_10sdp"
        android:text="@string/fragment_transfusion_text"
        android:textSize="@dimen/_17sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.airbnb.epoxy.EpoxyRecyclerView
        android:id="@+id/fragment_transaction_blood_group_epoxy_recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.airbnb.epoxy.EpoxyRecyclerView
        android:id="@+id/fragment_transaction_list_item_epoxy_recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>