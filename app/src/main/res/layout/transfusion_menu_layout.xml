<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/_20sdp"
    android:paddingEnd="@dimen/_20sdp"
    android:paddingTop="@dimen/_20sdp"
    android:background="@color/white">

    <View
        android:id="@+id/transfusion_menu_item_layout_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/rounded_corner_light_grey"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/transfusion_menu_item_layout_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="@string/dash"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintBottom_toBottomOf="@id/transfusion_menu_item_layout_view"
        app:layout_constraintEnd_toStartOf="@+id/transfusion_menu_item_layout_image_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/transfusion_menu_item_layout_view" />

    <ImageView
        android:id="@+id/transfusion_menu_item_layout_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/circle_primary"
        android:src="@drawable/ic_keyboard_arrow_right_24"
        app:layout_constraintBottom_toBottomOf="@id/transfusion_menu_item_layout_view"
        app:layout_constraintEnd_toEndOf="@id/transfusion_menu_item_layout_view"
        app:layout_constraintTop_toTopOf="@id/transfusion_menu_item_layout_view"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>