<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="@dimen/_20sdp"
    android:paddingEnd="@dimen/_20sdp"
    android:paddingTop="@dimen/_20sdp"
    android:background="@color/white">

    <View
        android:id="@+id/text_bg_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/rounded_corner_light_grey"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintTop_toTopOf="@id/text_bg_view"
        app:layout_constraintBottom_toBottomOf="@id/text_bg_view"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/dash" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_keyboard_arrow_right_24"
        app:layout_constraintTop_toTopOf="@id/text_bg_view"
        app:layout_constraintBottom_toBottomOf="@id/text_bg_view"
        app:tint="@color/white"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/circle_primary"
        app:layout_constraintEnd_toEndOf="@id/text_bg_view"/>
</androidx.constraintlayout.widget.ConstraintLayout>